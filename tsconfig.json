{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "src",
    "paths": {
      "@action/*": ["app/model/action/*"],
      "@condition/*": ["app/model/condition/*"],
      "@dialogue/*": ["app/model/dialogue/*"],
      "@responsive-service": ["app/shared/services/responsive.service"]
    },
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
